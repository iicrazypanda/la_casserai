<form method="post" action="{{ path('organisatie_delete', {'id': organisatie.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ organisatie.id) }}">
    <button class="btn">Delete</button>
</form>
