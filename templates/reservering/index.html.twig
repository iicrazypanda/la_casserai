{% extends 'admin/layout.html.twig' %}

{% block title %}Reservering index{% endblock %}

{% block main_header_content %}
    <div class="row mx-0">
        <h2 class="col px-0 nav-item">Reservering index</h2>
        <div class="col d-flex justify-content-end align-items-center px-0">
            <a href="{{ path('reservering_new') }}" class="btn btn-danger">Create new</a>
        </div>
    </div>
{% endblock %}

{% block main_body_classes %}p-0{% endblock %}

{% block main_body_content %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>CheckinDate</th>
                <th>CheckoutDate</th>
                <th>Enabled</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservering in reserverings %}
            <tr>
                <td>{{ reservering.id }}</td>
                <td>{{ reservering.checkinDate ? reservering.checkinDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reservering.checkoutDate ? reservering.checkoutDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reservering.enabled ? 'Yes' : 'No' }}</td>
                <td>
                    <a class="btn btn-danger border-secondary" href="{{ path('reservering_show', {'id': reservering.id}) }}">show</a>
                    <a class="btn btn-danger border-secondary" href="{{ path('reservering_edit', {'id': reservering.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
